pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
	stage ('Check-Git-Secrets') {
      steps {
        sh 'rm trufflehog || true'
        sh 'docker run gesellix/trufflehog --json https://github.com/sindhuhack/webapp.git > trufflehog'
        sh 'cat trufflehog'
      }
    }
    stage ('SCA-OWASP-Dependency-check') {
      steps{
    dependencyCheck additionalArguments: '--format HTML --format XML', odcInstallation: 'Default'
    }
  }
    stage ('SCA-Snyk') {
      steps{
    snykSecurity failOnIssues: false, snykInstallation: 'Please define a Snyk installation in the Jenkins Global Tool Configuration. This task will not run without a Snyk installation.', snykTokenId: 'Snyk-key'
    }
  }
    
    stage ('Build') {
      steps{
      sh 'mvn clean package'
      }
    }
    stage ('Deploy-To-Tomcat') {
            steps {
            sshagent(['Tomcat']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war sindhu@192.168.0.117:/home/sindhu/tomcat/apache-tomcat-9.0.58/webapps/webapp.war'
             }     
           }       
    }
  }
}	
